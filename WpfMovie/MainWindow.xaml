<Window x:Class="WpfMovie.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfMovie"
        mc:Ignorable="d"
        Title="Movie App" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="10">
            <StackPanel Orientation="Vertical" Margin="0,0,10,0">
                <Label Content="Title" />
                <TextBox x:Name="TitleTextBox" Width="200" />
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="0,0,10,0">
                <Label Content="Description" />
                <TextBox x:Name="DescriptionTextBox" Width="200" />
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="0,25,0,0">
                <Button Content="Add" Width="75" Height="20" Click="AddButton_Click"/>
            </StackPanel>
        </StackPanel>
        <ListBox x:Name="MovieListBox" Grid.Row="1" Grid.ColumnSpan="5" Margin="10" 
         ItemsSource="{Binding MovieItems}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Title}" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Description}" TextWrapping="Wrap"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
